{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "interface-name": {
      "options": "never-prefix"
    },
    "max-classes-per-file": false,
    "max-line-length": {
      "options": 150
    },
    "member-access": false,
    "member-ordering": false,
    "object-literal-sort-keys": false,
    "quotemark": {
      "options": "single"
    },
    "semicolon": {
      "options": "ignore-bound-class-methods"
    },
    "variable-name": {
      "options": [
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    }
  }
}

{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "interface-name": [
      "never-prefix"
    ],
    "max-classes-per-file": [
      false
    ],
    "max-line-length": [
      150
    ],
    "member-access": false,
    "member-ordering": [
      false
    ],
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      "ignore-bound-class-methods"
    ],
    "variable-name": [
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  }
}
